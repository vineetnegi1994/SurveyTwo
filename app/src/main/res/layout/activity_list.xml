    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:id="@+id/cardOne"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:src="@mipmap/abcdman"
                android:id="@+id/myImgOne"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/myImgOne"
                android:id="@+id/userName"
                android:text="User Name"
                android:textSize="18dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/myImgOne"
                android:layout_below="@id/userName"
                android:text="Desegnation"
                android:id="@+id/desegOne"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/myImgOne"
                android:id="@+id/userIdOne"
                android:layout_below="@id/desegOne"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:text="User Id"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/myImgOne"
                android:id="@+id/mobileOne"
                android:layout_below="@id/userIdOne"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:text="Mobile Number"
                android:layout_marginBottom="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>







